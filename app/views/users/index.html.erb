<% provide(:title, "Users") %>
<p id="notice"><%= notice %></p>

<br/><br/><br/><br/><br/><br/>
<div class="center jumbotron2">
<div class="animated rollIn">
<div class="container">



<h1>All Users</h1>

<table>
  <thead>
    <tr>
      <th colspan="8">Name</th>
      <th colspan="3">Last name</th>
      <th colspan="3">Phone</th>
      <th colspan="3">Email</th>
      <th colspan="3">Time in</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td colspan="3"><%= user.name %></td>
        <td colspan="3"><%= user.lastName %></td>
        <td colspan="3"><%= user.phone %></td>
        <td colspan="3"><%= user.email %></td>
        <td colspan="3"><%= user.lastLogin.localtime %></td>
        <td><%= link_to 'Show', user %></td>
        <td><%= link_to 'Edit', edit_user_path(user) %></td>
        <td><%= link_to 'Delete', user, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>





<%= link_to 'New User', signup_path %>
</div>
</div>
</div>



