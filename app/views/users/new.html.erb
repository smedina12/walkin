
<h1>Sign up</h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for(@user) do |f| %>
      <%= f.label :name %>
      <%= f.text_field :name %>
      
      <%= f.label :lastname %>
      <%= f.text_field :lastName %>
      
      <%= f.label :phone %>
      <%= f.text_field :phone %>

      <%= f.label :email %>
      <%= f.email_field :email %>



      <%= f.submit "Create my account", class: "btn btn-primary" %>
<%= link_to 'Back', users_path %>
 
    <% end %>
  </div>
</div>


